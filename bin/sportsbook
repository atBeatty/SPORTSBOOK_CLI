require 'pry'
require 'open-uri'
require 'net/http'
require 'json'

require_relative '../lib/api.rb'
require_relative '../lib/cli.rb'

puts "\n\n"
CLI.run

puts "\nTEAM 1\n\n"
team1 = CLI.create_roster
puts "\nTEAM 2\n\n"
team2 = CLI.create_roster

puts "Would you like to play with TEAM 1 or TEAM 2?\n\n"
puts "1/2?"

input = gets.chomp
if input != "1" && input != "2"
    puts "Please try choosing again."
    input = gets.chomp
elsif input == "1"
    chosen_roster = team1
else
    chosen_roster = team2
end

#opponents team
puts "\nTonight's matchup is against:\n\n"

team_opp = CLI.create_roster


#first half statistics

puts "\n\nTIP OFF!!!"


CLI.list_stats(chosen_roster)










